{% extends 'base.html.twig' %}

{% block title %}Votre liste d'envies{{ parent() }}{% endblock %}

{% block body %}

</br>
<h1 class="text-center">Votre liste d'envies</h1>
</br>

<div class="container">
    <div class="row">
    {% if products | length > 0 %}
        {% for product in products %}
            <div class="col-lg-4">
                <div class="card shadow mb-4">
                     {% if product.photos is not empty %}
                                <img style="height : 18rem" src="{{ asset("data/" ~ product.photos.0.picturePath ) }}" alt="image1">
                    {% endif %}
                    <div class="card-body" style="min-height : 15rem">
                        <h4 class="card-title">{{ product.name }}</h4>
                        <h5>{{ product.states.0.price }} â‚¬</h5>
                        <p class="card-text">{{ product.description|u.truncate(100, '...') }}</p>
                        <a href="{{ path( 'product_show', {id: product.id} ) }}" class="btn btn-light">En savoir plus</a>
                        <a href="{{ path( 'wishlist_remove', {id: product.id} ) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        <a href="{{ path( 'cart_add', {id: product.id} ) }}" class="btn btn-primary"><i class="fas fa-cart-plus"></i></a>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
            <h2 class="ml-2">Votre liste d'envies est vide </h2>
    {% endif %}
    </div>
</div>
    
{% endblock %}