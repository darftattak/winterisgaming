{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe - {{ parent() }}{% endblock %}

{% block body %}
    
<h1 class="text-center">Réinitialiser votre mot de passe</h1>

{{ form_start( form, {
        'attr': {
            'class': 'container-fluid my-2',
            'novalidate': 'novalidate',
        }
    } ) }}

    <div class="row">
        <div class="col-12 col-lg-6">
            {{ form_row( form.email) }}
        </div>
    </div>

    
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary btn-lg">Envoyer le mail de réinitialisation du mot de passe</button>
    </div>
    {{ form_end( form ) }}


{% endblock %}