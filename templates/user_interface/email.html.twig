{% extends 'base.html.twig' %}

{% block title %}Modifier votre mail{% endblock %}

{% block body %}
<h1 class="text-center">Modifier votre mail</h1>

{{ form_start( form, {
        'attr': {
            'class': 'container-fluid my-2',
            'novalidate': 'novalidate',
        }
    } ) }}

    <div class="row">
        <div class="col-12 col-lg-6">
            {{ form_row( form.oldPassword) }}
            {{ form_row( form.email ) }}
        </div>
    </div>

    
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary btn-lg">Modifier votre mail</button>
    </div>
    {{ form_end( form ) }}


{% endblock %}