{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Votre panier</h1>
<div class="table-responsive">
    {% if items | length > 0 %}
        <table class="table">
    <thead>
        <tr>
            <th>Produit</th>
            <th>Etat</th>
            <th>Quantité</th>
            <th>Prix</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
        <tr>
            <td>{{ item.product.product.name }}</td>
            <td>{{ item.product.state }}</td>
            <td><input class='cartQuantity form-control' type="number" unit="{{ item.product.price }}" name="{{item.product.id}}" id="{{item.product.id}}" min="1" max="{{item.product.stock}}"value="{{ item.quantity }}"></td>
            <td>{{ item.product.price }}€</td>
            <td totalitem='totalItem'>{{ item.product.price * item.quantity }}€</td>
            <td>
            <a href="{{ path('cart_remove', {'id' : item.product.id}) }}" class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
            Supprimer
            </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    
    <tfoot>
        <tr>
        {% if user is same as(null) %}
       <td><a class="nav-link btn btn-blue btn-sm" href="{{ path('user_login') }}">Connexion</a></td>
       <td><a class="nav-link btn btn-blue btn-sm" href="{{ path('user_register') }}">Inscription</a></td>
        {% else %}
            <td colspan="4" class="text-right">Total : <span id="cartTotalValue">{{ total }}</span>€</td>
            <td colspan="2"><a href="{{ path('order') }}" class="btn btn-blue btn-sm"><i class="fas fa-check-circle mr-1"></i>Valider mon panier</a></td>
        {% endif %}
        </tr>
    </tfoot>

</table>
</div>        
    {% else %}
        <p>Votre panier est vide </p>
    {% endif %}

</div>
{% endblock %}
