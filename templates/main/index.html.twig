{% extends 'base.html.twig' %}

{% block title %}Accueil - Winter is Gaming{% endblock %}

{% block body %}
<!--Espace promo-->
<!--Carousel Wrapper-->

<div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
  <!--Slides-->
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{ asset("build/img/img1.png") }}"
        alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset("build/img/img2.png") }}"
        alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset("build/img/img3.png") }}"
        alt="Third slide">
    </div>
  </div>
  <!--/.Slides-->
  <!--Controls-->
  <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <!--/.Controls-->
  <ol class="carousel-indicators">
    <li data-target="#carousel-thumb" data-slide-to="0" class="active">
      <img src="{{ asset("build/img/logo.png") }}" width="100">
    </li>
    <li data-target="#carousel-thumb" data-slide-to="1">
      <img src="{{ asset("build/img/img1.png") }}" width="100">
    </li>
    <li data-target="#carousel-thumb" data-slide-to="2">
      <img src="{{ asset("build/img/img1.png") }}" width="100">
    </li>
  </ol>
</div>
<!--end espace promo-->

<!--carousel product-->

<div class="container pt-4">
  <h3 class="bottomSep">Certains de nos produits</h3>
  <div class="row">
      
      {% for product in randomList %}
      
          <div class="col-lg-4">

              <div class="card shadow mb-4">
                  {% if product.photos is not empty %}
                              <img style="height : 18rem" src="{{ asset("data/" ~ product.photos.0.picturePath ) }}" alt="image1">
                  {% endif %}
                  <div class="card-body">
                      <h3 class="card-title">
                          {% if product.name|length < 23 %}
                              {{ product.name}}
                          {% else %}
                              {{ product.name|u.truncate(20, '...') }}
                          {% endif %}
                      </h3>
                      <div class="listInfos">
                          <p>A partir de {{product.lowestprice}}€</p>
                          <a href="{{ path( 'product_show', {id: product.id} ) }}" class="btn btn-light btn-outline-primary align-self-baseline">Voir</a>
                          <a href="{{ path( 'cart_add', {id: product.states.0.id} ) }}" class="btn btn-primary align-self-baseline"><i class="fas fa-cart-plus"></i></a>
              
              {% if user is not same as(null) %}
                          
                          <a href="{{ path( 'wishlist', {id: product.id} ) }}" class="btn btn-success align-self-baseline"><i class="fas fa-clipboard-list"></i></a>
              
              {% endif %}
                      </div>
                  </div>
              </div>
          </div>
      {% endfor %}
      
  </div>
</div>

<!--Fidélisation-->

<div class="container p-1 fidelise">
<div class="row">

<div class="col-md-4 text-white">

<h1>Fidélisation:</h1>
</div>
</div>

<a class="btn btn-blue btn-lg fid" href="{{ path('fidelisation') }}">Programme de fidélité</a>

</div>

{% endblock %}
