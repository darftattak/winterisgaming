{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ parent() }}{% endblock %}

{% block body %}
<div class="bg-white">
    {{ form_start( form, {
        'attr': {
            'class': 'container-fluid',
            'novalidate': 'novalidate',
        }
    } ) }}

    <div class="row ">
        
        <div class="col-lg-8">
            {{ form_row( form.username,{'attr': { 'class': 'form-control'}} ) }}
        
        
        
            {{ form_row( form.email,{'attr': { 'class': 'form-control'}} ) }}
            {{ form_row( form.plainPassword,{'attr': { 'class': 'form-control'}} ) }}
            </div>
        <div class="col-lg-4">
            {{ form_row( form.firstname,{'attr': { 'class': 'form-control'}} ) }}
            {{ form_row( form.lastname,{'attr': { 'class': 'form-control'}} ) }}
            {{ form_row( form.avatarFile,{'attr': { 'class': 'form-control'}} ) }}
        </div>
    </div>

    
    <div class="d-flex justify-content-end formRes">
        <button type="submit" class="btn btn-blue btn-lg btnSpec btnUpUpdate">S'inscrire</button>
    </div>
    {{ form_end( form ) }}
    </div>
{% endblock %}